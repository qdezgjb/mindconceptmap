# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts must always have LF line endings (for Linux execution)
*.sh text eol=lf

# Batch files must always have CRLF line endings (for Windows execution)
*.bat text eol=crlf
*.cmd text eol=crlf

# Python files - normalize to LF
*.py text eol=lf
*.pyi text eol=lf
requirements*.txt text eol=lf
Pipfile text eol=lf
pyproject.toml text eol=lf

# Config files - normalize to LF
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.env* text eol=lf
.editorconfig text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.vue text eol=lf
*.svg text eol=lf

# Markdown and docs
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf
LICENSE text eol=lf
NOTICE text eol=lf

# Docker
Dockerfile text eol=lf
Dockerfile* text eol=lf
docker-compose*.yml text eol=lf
.dockerignore text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files - do not modify
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.bmp binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.pdf binary
*.db binary
*.sqlite binary
*.sqlite3 binary
*.db-wal binary
*.db-shm binary
*.zip binary
*.tar.gz binary
*.rar binary
*.7z binary
*.pyc binary
*.pyo binary
*.pyd binary


